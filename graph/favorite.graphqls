extend type Mutation {
    toggleUserFav(input: ToggleUserFav!): [Favorite]
}

extend type Query {
    getAllUserFavs(id: String!): [Favorite]
}

input ToggleUserFav {
    userId: String!
    productId: String!
}


type Favorite {
    id: ID!
    user: User!
    product: Product!
}

input AddUserFav {
    userId: String!
    productId: String!
}

input RemoveUserFav {
    userId: String!
    productId: String!
}