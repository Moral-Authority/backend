extend type Query {
    user(_id: String!): User!
    users: [User]!
}

extend type Mutation {
    addUser(input: NewUser!): User!
    updateUser(input: UpdateUser!): User!
}

type User {
    _id: String!
    email: String!
    password: String
}

input NewUser {
    email: String!
    password: String!
}

input UpdateUser {
    userId: String!
    email: String
    password: String
}